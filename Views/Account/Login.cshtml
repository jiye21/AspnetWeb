@model AspnetWeb.ViewModel.LoginViewModel


<form class="login" method="post" asp-controller="Account" asp-action="Login">
	<div class="text-danger" asp-validation-summary="ModelOnly"></div>
	<input type="text" asp-for="UserId" placeholder="UserID">
	<span class="text-danger" asp-validation-for="UserId"></span>
	<input type="password" asp-for="UserPassword" placeholder="Password">
	<span class="text-danger" asp-validation-for="UserPassword"></span><br />
	<button type="submit">Login</button>
</form>
